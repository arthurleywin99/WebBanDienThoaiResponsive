
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="~/Content/Site.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/bootstrap.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.2.0/css/all.css">
        <script src="~/Scripts/jquery-3.4.1.min.js" type="text/javascript"></script>
        <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
        <title>Quên mật khẩu</title>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="col-md-3 align-self-start">

                </div>
                <div class="col-md-6 align-self-center">
                    <img class="mx-auto d-block" src="~/Content/Images/head-logo.png" style="width: 50%;" alt="Alternate Text" />
                    <div class="rounded border border-secondary p-md-5">
                        <h2 class="font-weight-bold mb-md-4">Khôi phục tài khoản</h2>
                        @using (Html.BeginForm("Recover", "Account"))
                        {
                            @Html.AntiForgeryToken()
                            <div class="text-success">
                                @ViewBag.Message
                            </div>
                            <div class="form-group">
                                <h5 class="font-weight-bold">Địa chỉ Email</h5>
                                <input type="email" name="Email" value="" class="form-control" placeholder = "Nhập địa chỉ Email khôi phục" />
                            </div>
                            <h5 class="text-danger font-weight-bold">@ViewData["Error"]</h5>
                            <button type="submit" class="btn btn-success btn-lg btn-block text-uppercase mb-md-3">Gửi mã khôi phục</button>
                        }
                    </div>
                </div>
                <div>

                </div>
            </div>
        </div>
    </body>
</html>
