@model WebBanDienThoaiResponsive.ViewModels.ProductTypeViewModel

@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Cập nhật loại sản phẩm</h2>

<div class="container">
    @using (Html.BeginForm("", ""))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Loại sản phẩm @Model.ProductTypeName</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                <label class="control-label col-md-2">Tên loại sản phẩm</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ProductTypeName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ProductTypeName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Icon</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IconURL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.IconURL, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-outline-primary" />
                </div>
            </div>
        </div>
    }
</div>
